<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--    <item name="windowNoTitle">true</item>
            <item name="android:windowBackground">@drawable/splash_background</item>
            <item name="android:colorBackgroundCacheHint">@null</item>
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowAnimationStyle">@android:style/Animation</item>
            <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ic_login_new</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorBackground">#FFFFFF</item>

    </style>

    <style name="Mymaterialact" parent="MyMaterialTheme.Base2" >
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="MyMaterialTheme.Base2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/header_bgcolor</item>
        <item name="colorPrimaryDark">@color/linebottom_light</item>
        <item name="colorAccent">@color/button_accept</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:fontFamily">@font/inter_normal</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />

    <!--  <style name="MyMaterialTheme_home" parent="MyMaterialTheme.Base">
          <item name="android:windowBackground">@color/black</item>
      </style>
  -->

    <style name="MyMaterialTheme_home" parent="MyMaterialTheme.Base">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/appbg</item>
        <item name="colorPrimaryDark">@color/linebottom_light</item>
        <item name="colorAccent">@color/button_accept</item>
        <item name="contentInsetStart">0dp</item>

        <item name="android:textColorHint">@color/hintcolor</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowDisablePreview">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NewDialog" parent="android:Theme.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogwinddow" parent="android:Theme.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogwinddow_trans" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <item name="android:textColor">@color/fleetera_text_color</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="alertDialogTheme">@style/MyAlertDialogTheme</item>

    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_normal</item>
    </style>

    <style name="MyTextAppearanceSmall">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/fleetera_text_color</item>
    </style>

    <style name="MyTextAppearanceMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fleetera_text_color</item>
    </style>

    <style name="MyTextAppearanceLarge">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/fleetera_text_color</item>
    </style>
    <!--<style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/semitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>-->
    <style name="Theme.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/semitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_Transparent1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/pickupheadertext</item>
        <item name="colorSwitchThumbNormal">@color/cancelbtntxtcolor</item>
        <item name="colorControlNormal">@color/cancelbtntxtcolor</item>
    </style>

    <style name="enterTxt">
        <item name="android:textColor">@color/app_text_color</item>

        <item name="android:fontFamily">@font/inter_normal</item>

        <item name="textSize">15dp</item>
    </style>


    <declare-styleable name="CustomIconView">
        <attr name="length" format="integer" />
    </declare-styleable>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@color/white</item>
    </style>

    <style name="textview_style_bark">

        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/inter_normal</item>
        <item name="textSize">16dp</item>
    </style>

    <style name="edittext_style" >
        <item name="android:textColor">@color/app_text_color</item>

        <item name="android:fontFamily">@font/inter_normal</item>

        <item name="textSize">15dp</item>
    </style>

    <style name="edittext_style_bold" >
        <item name="android:textColor">@color/app_text_color</item>

        <item name="android:fontFamily">@font/inter_bold</item>

        <item name="textSize">13dp</item>
    </style>

    <style name="edittext_white" >
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/inter_normal</item>
        <item name="textSize">15dp</item>
    </style>

    <style name="edittext_profile" >
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="textSize">20dp</item>
    </style>

    <style name="edittext_medium" >
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="textSize">15dp</item>
    </style>
    <style name="textview_heading" >

        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="textSize">20dp</item>
    </style>
    <style name="InputLayoutOuterbox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textbox</item>

        <item name="cornerFamily">rounded</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">15sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/inter_normal</item>

    </style>

    <style name="AppSplash" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_login_new</item>-->

    </style>

    <style name="CustomAlertDialog">

        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarPostive</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DatePickerTheme.ButtonBarPostive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_theme_color</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>
</resources>