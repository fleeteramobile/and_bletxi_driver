<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    android:orientation="vertical"
    card_view:cardCornerRadius="20dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/full_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_5dp"
        android:layout_marginRight="@dimen/dp_10">


        <TextView
            android:id="@+id/title_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/pad_5dp"
            android:text="Incentive title"
            android:textColor="@color/block"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@color/grey_color_new"
            android:gravity="right|center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:padding="@dimen/pad_5dp"
                    android:text="@string/amountat"
                    android:textColor="@color/new_blue_color_map"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/inc_amtTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="10.00"
                    android:paddingLeft="@dimen/dp_5"
                    android:textColor="@color/block"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:padding="@dimen/pad_5dp"
                    android:text="@string/statusat"
                    android:textColor="@color/new_blue_color_map"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/activeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:text="@string/active"
                    android:textColor="@color/marker_green"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:padding="@dimen/pad_5dp"
                android:text="@string/finishat"
                android:textColor="@color/new_blue_color_map"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/finish_dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:paddingLeft="@dimen/pad_5dp"
                android:text="10.00"
                android:textColor="@color/block"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView

            android:id="@+id/showall_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/rect_red"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/show_detail"
            android:textColor="@color/black"
            android:elevation="@dimen/dp_5"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>