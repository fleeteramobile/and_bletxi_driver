<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="@dimen/tool_bar"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_header_new"
        android:padding="10dp">


        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@color/link_color"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/headerTxt"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Incentive Details"
            android:textColor="@color/white" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:foreground="@drawable/background_shadow"
        android:visibility="visible"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/full_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_5dp">


            <TextView
                android:id="@+id/title_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/pad_5dp"
                android:text="Incentive title"
                android:textColor="@color/block"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/new_blue_color_map"
                android:gravity="right|center"
                android:paddingLeft="@dimen/dp_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:padding="@dimen/pad_5dp"
                        android:text="@string/amountat"
                        android:textColor="@color/new_blue_color_map"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/inc_amtTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="10.00"
                        android:textColor="@color/block"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:padding="@dimen/pad_5dp"
                        android:text="@string/statusat"
                        android:textColor="@color/new_blue_color_map"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:paddingLeft="@dimen/pad_5dp"
                        android:text="Active"
                        android:textColor="@color/marker_green"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:padding="@dimen/pad_5dp"
                    android:text="@string/finishat"
                    android:textColor="@color/new_blue_color_map"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/inc_enddate_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:text="10.00"
                    android:textColor="@color/block"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>


            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_10"
                card_view:cardCornerRadius="20dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/item"
                            android:textColor="@color/block"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@color/new_blue_color_map"
                            android:gravity="right|center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/avail"
                            android:textColor="@color/block"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/complete_trips"
                            android:textColor="@color/block"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/driver_rating"
                            android:textColor="@color/block"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/accept_rate"
                            android:textColor="@color/block"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/required"
                            android:textColor="@color/block"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="70dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@color/new_blue_color_map"
                            android:gravity="right|center" />

                        <TextView
                            android:id="@+id/avail_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/complete_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/rating_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/accept_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="@string/achieved"
                            android:textColor="@color/block"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@color/new_blue_color_map"
                            android:gravity="right|center" />

                        <TextView
                            android:id="@+id/avail_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="-"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/complete_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="-"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/rating_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="-"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/accpt_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_5"
                            android:text="-"
                            android:textColor="@color/new_blue_color_map"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/finalres_Txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/final_result"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/finalstatus_Txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/inprogress"
                        android:layout_weight="1"
                        android:textColor="@color/new_blue_color_map"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>

                    <TextView
                        android:id="@+id/incentive_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/success_text"
                        android:textColor="@color/block"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </LinearLayout>


           </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>