<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad_5dp">


        <TextView
            android:id="@+id/pdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:padding="@dimen/pad_5dp"
            android:text="mjfgjhgjkhkglhklgklhklgjlkhjklkh"
            android:textColor="@color/block"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:padding="@dimen/pad_5dp"
            android:text="kdgkgmlhl;jh"
            android:textColor="@color/block"
            android:textSize="12sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pdate"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/pad_5dp"
            android:padding="@dimen/pad_5dp"
            android:text="fhkljgklhklghkkhkghkhkkhk"
            android:textColor="@color/bordercolor"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>