<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"

    android:background="@android:color/transparent">

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_contact_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#333333"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintLeft_toRightOf="@+id/img_contact"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_contact"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Naga" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_delete"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/ic_trash"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_contact" />


    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/img_progress"
        android:layout_width="28dp"
        android:visibility="gone"
        android:layout_height="31dp"
        style="?android:attr/progressBarStyle"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_contact" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="228dp"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_contact"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact"
        app:layout_constraintVertical_bias="0.1"
        tools:text="94589493450" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d3d3d3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>